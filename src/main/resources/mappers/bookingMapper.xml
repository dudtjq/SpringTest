<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.dudtjq.test.ajax.dao.BookingDAO">
 	<select id="selectBookingList" resultType="com.dudtjq.test.ajax.model.Booking">
 			SELECT 
				`id`
				,`name`
				, `headcount`
				, `day`
				, `date`
				, `phoneNumber`
				, `state`
				, `createdAt`
				, `updatedAt`
			FROM
				`booking`
 	
 	</select>	
 	
 	<select id="checkBookingList" resultType="com.dudtjq.test.ajax.model.Booking"
 	parameterType="map">
 	
			SELECT 
				`id`
				,`name`
				, `headcount`
				, `day`
				, `date`
				, `phoneNumber`
				, `state`
				, `createdAt`
				, `updatedAt
			FROM
				`booking`
		 	WHERE	
		 	
		 		<![CDATA[
		 		
		 			`name` = #{name}
		 			
		 		AND
		 		
		 			`date` = #{date}
		 			
		 		AND	
		 		
		 			`day` = #{day}
		 			
		 		AND 
		 		 	`headcount` = #{headcount}
		 		 	
		 		AND  	
		 		
		 			`state` = #{state}
		 			
		 		]]>
	
	</select>
 	
 	<insert id="insertBooking" parameterType="map">
 			INSERT INTO
			`booking`
			(
				`name`
				, `date`
				, `day`
				, `headcount`
				, `phoneNumber`
				, `state`
				, `createdAt`
				, `updatedAt`
			)
			VALUE
			(
				#{name}
				, #{date}
				, #{day}
				, #{headcount}
				, #{phoneNumber}
				, #{state}
				, now()
				, now()
			
			)	
 	
 	
 	</insert>
 	
 	<delete id="deleteBookingId" parameterType="int">
 	
 		DELETE
	 	
    		FROM `booking`
    		
   		WHERE
   		 
        	`id` = #{id}
        
      
 	
 	
 	
 	</delete>
 	
 	</mapper>