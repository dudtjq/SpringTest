<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.dudtjq.test.jsp.dao.SellerDAO">
  
  	<insert id="insertSeller" parameterType="com.dudtjq.test.jsp.model.Seller">
  		INSERT INTO
			`seller`
			(
				`nickname`
				, `temperature`
				, `profileImage`
				, `createdAt`
				, `updatedAt`
			)
			VALUE
			(
				#{nickname}
				, #{temperature}
				, #{profileImage}
				, now()
				, now()
			
			)	
  	
  	</insert>
  	
  	<select id="selectSeller" resultType="com.dudtjq.test.jsp.model.Seller">
		SELECT 
				`id`
				,`nickname`
				, `temperature`
				, `profileImage`
				, `createdAt`
				, `updatedAt`
		FROM
			`seller`
		ORDER BY
		 	`id` DESC
		LIMIT 
			1 	
	
	</select>
  
  
  </mapper>